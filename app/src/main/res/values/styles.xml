<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 自定义对话框样式 -->
        <item name="android:textSize">36sp</item> <!-- 对话框文本大小 -->
        <item name="android:textColor">#000000</item> <!-- 对话框文本颜色 -->
        <item name="buttonBarButtonStyle">@style/CustomAlertDialogButtonStyle</item>
        <!-- 你可以添加更多的样式属性来自定义对话框 -->
    </style>

    <style name="CustomAlertDialogButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="background_color">@color/green</item>
    </style>

    <!--colorControlNormal 为没有获取焦点时候下划线的颜色-->
    <!--colorControlActivated 为获取焦点时候光标与下划线的颜色-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blue_sky</item>
        <item name="colorControlActivated">@color/green</item>
    </style>


</resources>
